<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/Ptf3Ou"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp">

            <ImageView
                android:id="@+id/iv_AnimalImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:layout_below="@id/iv_AnimalImg"
                android:id="@+id/tv_Animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="center" />

            <TextView
                android:layout_below="@id/tv_Animal"
                android:id="@+id/tv_animalLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAlignment="center" />

            <TextView
                android:layout_below="@id/tv_animalLocation"
                android:id="@+id/tv_animalCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condition"
                android:textAlignment="center" />




        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>